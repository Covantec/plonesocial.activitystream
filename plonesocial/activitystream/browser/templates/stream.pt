<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main">

        <div class="plonesocial activitystream">
          <h1 class="documentFirstHeading"
              tal:condition="not:view/tag">Activity Stream</h1>
          <h1 class="documentFirstHeading"
              tal:condition="view/tag">Activity Tagged 
          #<span tal:replace="view/tag">sometag</span>
          </h1>
          
          <tal:block replace="structure view/stream_provider" />
        </div>

    </metal:main-macro>
    </div>

</body>
</html>
